<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>        
        <record id="view_archive_purchase_orders_wizard_form" model="ir.ui.view">
            <field name="name">view.archive.purchase.orders.wizard.form</field>
            <field name="model">archive.purchase.orders.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="purchase_order_id"/>
                    <footer>
                        <button name="action_archive" type="object" string="Confirm" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>             
            </field>
        </record>

        <record id="action_archive_purchase_orders_wizard" model="ir.actions.act_window">
            <field name="name">Archive Multiple Purchase Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">archive.purchase.orders.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="archive_multiple_record" 
            name="Archive Multiple Purchase Orders" 
            parent="purchase.menu_purchase_config" 
            action="action_archive_purchase_orders_wizard" 
            sequence="5"/>
    </data>
</odoo>