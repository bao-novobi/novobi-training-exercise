<?xml version="1.0" encoding="utf-8"?>
<odoo >
    <record id="res_config_settings_view_form_purchase_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.purchase.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='get_order_warnings']" position="after"> 
                <div class="col-12 col-lg-6 o_setting_box" id="set_lifespan">
                    <div class="o_setting_right_pane">     
                        <label for="lifespan" string="Lifespan:"/>
                        <field name="lifespan"/>days
                        <div class="text-muted">
                            Adjust the life span
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
